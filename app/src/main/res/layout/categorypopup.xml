<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="420dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="400dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:id="@+id/cancelcategorypopup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#eb3452"
            android:text="x"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:textSize="28dp"/>
        <EditText
            android:background="@drawable/movie"
            android:id="@+id/categories_name"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@id/cancelcategorypopup"
            android:layout_centerInParent="true"
            android:hint="Category Name"
            android:paddingLeft="20sp"
            android:layout_marginTop="30dp"/>
        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/save"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_below="@id/categories_name"
            android:background="#009900"/>
        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/cancel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:layout_below="@id/categories_name"
            android:layout_toRightOf="@id/save"
            android:background="#eb3452"/>


    </RelativeLayout>


</RelativeLayout>